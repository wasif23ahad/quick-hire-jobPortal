generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  EMPLOYER
  ADMIN
}

enum JobStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now()) @map("created_at")

  applications Application[]
  postedJobs   Job[]

  @@map("users")
}

model Job {
  id          String   @id @default(uuid())
  title       String
  company     String
  location    String
  category    String
  type        String   @default("Full-Time")  // Full-Time, Part-Time, Remote, Internship
  description String
  salary      String?
  companyLogo String?  @map("company_logo")
  tags        String[] @default([])
  status      JobStatus @default(PENDING)
  postedById  String?   @map("posted_by_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  applications Application[]
  postedBy     User?    @relation(fields: [postedById], references: [id], onDelete: SetNull)

  @@map("jobs")
}

model Application {
  id         String   @id @default(uuid())
  jobId      String   @map("job_id")
  userId     String?  @map("user_id")
  name       String
  email      String
  resumeLink String   @map("resume_link")
  coverNote  String   @map("cover_note")
  createdAt  DateTime @default(now()) @map("created_at")

  job  Job   @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("applications")
}

